// Bonus
// ======================================

.bonus {

  &.section-background-image {

    .bonus__list-item {
      opacity: 0.9;
    }
  }

  .section__content {
    @include screen-sm-max {
      background-position: top center;
      background-size: 100% auto;
    }
    @include screen-md-min {
      padding: $gutter-width * 3 $gutter-width * 2;
    }

    padding: $gutter-width;
    border-radius: $base__border-radius;
  }
}

.bonus__container {
  @include make-container;
}

.bonus__list {
  @include make-row(false);
  @include justify-content(center);
}

.bonus__list-item {
  @include screen-lg-min {
    @include make-col(4);
  }
  @include screen-md-min {
    padding: $gutter-width * 1.5 $gutter-width;
  }
  @include make-col(12);

  padding: $gutter-width $gutter-width / 2;
  border: 0;
  background-color: $interface__background-color;
  text-align: center;

  &:first-child {
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
  }

  &:last-child {
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
  }

  h3 {
    margin: 0 0 $gutter-width / 2;
    font-family: $body__font-family;
    font-size: modular-scale(0);
    font-weight: bold;
  }

  p {
    line-height: 1.4;
  }

  .fa {
    margin-bottom: $gutter-width / 1.5;
    color: $accent__color;
    font-size: modular-scale(3);
    font-weight: 400;
  }
}
