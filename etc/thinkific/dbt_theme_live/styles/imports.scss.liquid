// Global
// ======================================

// Root
$root__font-size: {{ theme.settings.root_font_size }} !default;

// Body
$body__background-color: {{ theme.settings.background_color }} !default;
$body__text-color: {{ theme.settings.text_color }} !default;
$body__font-family: '{{ theme.settings.body_font }}', Sans-Serif !default;
$body__font-size: modular-scale(0) !default;
$body__font-weight: 400 !default;
$body__line-height: 1.375rem !default;

// Buttons
$button__padding: 0.5rem 1rem !default;
$button__padding--large: 15px 30px !default;
$button__border-width: 2px !default;
$button__border-style: solid !default;
$button__border-radius: 100px !default;
$button__font-family: $body__font-family;
$button__font-size: $body__font-size !default;
$button__font-weight: 500 !default;

// Primary
{% if theme.settings.primary_button_style == "solid" %}
  $button__primary-background: {{ theme.settings.primary_button_background_color }} !default;
  $button__primary-border: $button__primary-background !default;
  $button__primary-color: {{ theme.settings.primary_button_text_color }} !default;
  $button__primary-background--active: $button__primary-background !default;
  $button__primary-border--active: $button__primary-border !default;
  $button__primary-color--active: $button__primary-color !default;
{% endif %}

{% if theme.settings.primary_button_style == "outline" %}
  $button__primary-background: transparent !default;
  $button__primary-border: {{ theme.settings.primary_button_background_color }} !default;
  $button__primary-color: {{ theme.settings.primary_button_text_color }} !default;
  $button__primary-background--active: $button__primary-background !default;
  $button__primary-border--active: $button__primary-border !default;
  $button__primary-color--active: $button__primary-color !default;
{% endif %}

{% if theme.settings.primary_button_style == "outline_with_fill" %}
  $button__primary-background: transparent !default;
  $button__primary-border: {{ theme.settings.primary_button_background_color }} !default;
  $button__primary-color: {{ theme.settings.primary_button_text_color }} !default;
  $button__primary-background--active: $button__primary-border !default;
  $button__primary-border--active: $button__primary-border !default;
  $button__primary-color--active: dynamic-contrast-color($button__primary-background--active) !default;
{% endif %}

// Secondary
{% if theme.settings.secondary_button_style == "solid" %}
  $button__secondary-background: {{ theme.settings.secondary_button_background_color }} !default;
  $button__secondary-border: $button__secondary-background !default;
  $button__secondary-color: {{ theme.settings.secondary_button_text_color }} !default;
  $button__secondary-background--active: $button__secondary-background !default;
  $button__secondary-border--active: $button__secondary-border !default;
  $button__secondary-color--active: $button__secondary-color !default;
{% endif %}

{% if theme.settings.secondary_button_style == "outline" %}
  $button__secondary-background: transparent !default;
  $button__secondary-border: {{ theme.settings.secondary_button_background_color }} !default;
  $button__secondary-color: {{ theme.settings.secondary_button_text_color }} !default;
  $button__secondary-background--active: $button__secondary-background !default;
  $button__secondary-border--active: $button__secondary-border !default;
  $button__secondary-color--active: $button__secondary-color !default;
{% endif %}

{% if theme.settings.secondary_button_style == "outline_with_fill" %}
  $button__secondary-background: transparent !default;
  $button__secondary-border: {{ theme.settings.secondary_button_background_color }} !default;
  $button__secondary-color: {{ theme.settings.secondary_button_text_color }} !default;
  $button__secondary-background--active: $button__secondary-border !default;
  $button__secondary-border--active: $button__secondary-border !default;
  $button__secondary-color--active: dynamic-contrast-color($button__secondary-background--active) !default;
