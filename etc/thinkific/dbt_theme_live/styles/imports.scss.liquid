// Soup of the Day
// ======================================

@import 'bourbon';


// Functions
// ======================================

@function dynamic-contrast-color($color) {
  @if (lightness($color) > 85) {
    @return $black;
  } @else {
    @return $white;
  }
}

@function dynamic-hover-color($color) {
  @if (lightness($color) > 45) {
    @return darken($color, 10%);
  } @else {
    @return lighten($color, 10%);
  }
}

@function gray-scale($key) {
  @if map-has-key($gray-scale, $key) {
    @return map-get($gray-scale, $key);
  }

  @warn "Unknown `#{$key}` in $gray-scale.";
  @return null;
}

@function section-height-preset($key) {
  @if map-has-key($section-height, $key) {
    @return map-get($section-height, $key);
  }

  @warn "Unknown `#{$key}` in $section-height.";
  @return null;
}

@function z-index($key) {
  @if map-has-key($z-index, $key) {
    @return map-get($z-index, $key);
  }

  @warn "Unknown `#{$key}` in $z-index.";
  @return null;
}

// Grid
// ======================================
$grid-columns: 12 !default;
$gutter-width: 2rem !default;


// Breakpoints
// ======================================

$screen-xs: 320px !default;
$screen-sm: 480px !default;
$screen-md: 768px !default;
$screen-lg: 992px !default;
$screen-xl: 1200px !default;
$screen-xxl: 1440px !default;

$screen-legacy-max: ($screen-xs - 1px) !default;
$screen-xs-max: ($screen-sm - 1px) !default;
$screen-sm-max: ($screen-md - 1px) !default;
$screen-md-max: ($screen-lg - 1px) !default;
$screen-lg-max: ($screen-xl - 1px) !default;
$screen-xl-max: ($screen-xxl - 1px) !default;


// Modular Scale
// ======================================
$modular-scale-base: 1rem !default;
$modular-scale-base-md: 0.9rem !default;
$modular-scale-base-sm: 0.8rem !default;
$modular-scale-ratio: 1.25 !default;


// Colors
// ======================================

// Accents
$accent__color: {{ theme.settings.accent_color }} !default;
$background-decoration__color: {{ theme.settings.background_decoration }} !default;

// Alert
$alert--info: #FFED8F !default;
$alert--error: #E75725 !default;
$alert--success: #54C670 !default;

// Core
$black: #000000 !default;
$white: #ffffff !default;
$gray-0: #f7f7f7 !default;
$gray-1: #e5e5e5 !default;
$gray-2: #eceeef !default;
$gray-3: #ced4da !default;
$gray-4: #adb5bd !default;
$gray-5: #999999 !default;
$gray-6: #636c72 !default;
$gray-7: #505050 !default;
$gray-8: #495057 !default;
$gray-9: #343a40 !default;
$gray-10: #292b2c !default;

$gray-scale: (
  0: $gray-0,
  1: $gray-1,
  2: $gray-2,
  3: $gray-3,
  4: $gray-4,
  5: $gray-5,
  6: $gray-6,
  7: $gray-7,
  8: $gray-8,
  9: $gray-9,
  10: $gray-10
);


// Shadows
$shadow-button: 0 4px 8px 0 rgba(0, 0, 0, 0.15) !default;
$shadow-card: 0 8px 22px rgba(0, 0, 0, 0.15) !default;
$shadow-interface: 1px 1px 0 rgba(0, 0, 0, 0.05) !default;
$shadow-menu: 0 2px 16px 0 rgba(0,0,0,0.1) !default;
$shadow-1: 0 2px 4px 0 rgba(0, 0, 0, 0.05) !default;
$shadow-2: 0 2px 8px 0 rgba(0, 0, 0, 0.1) !default;
$shadow-3: 0 2px 16px 0 rgba(0, 0, 0, 0.1) !default;
$shadow-image: 0 24px 30px 0 rgba(46, 46, 46, 0.2) !default;


// Vendors
$facebook: #3b5998 !default;
$google-plus: #db4437 !default;
$instagram: #c32aa3 !default;
$linked-in: #007bb5 !default;
$pinterest: #bd081c !default;
$skype: #00aff0 !default;
$slack: #4d394b !default;
$spotify: #1ed760 !default;
$twitter: #1da1f2 !default;
