// Links
$link__color: {{ theme.settings.link_color }} !default;
$link__color--active: $link__color !default;

// Cards
$card__background-color: {{ theme.settings.card_background_color }} !default;
$card__background-color--active: {{ theme.settings.card_background_hover_color }} !default;

// Banner
$banner__font-family: '{{ theme.settings.banner_font }}', sans-serif !default;
$banner__font-weight: {{ theme.settings.banner_weight }} !default;

// Headings
$heading__color: {{ theme.settings.heading_color }} !default;
$heading__font-family: '{{ theme.settings.heading_font }}', sans-serif !default;
$heading__font-weight: {{ theme.settings.heading_weight }} !default;
$heading__line-height: 1.2 !default;

$subheading__font-family: '{{ theme.settings.subheading_font }}', sans-serif !default;
$subheading__font-weight: {{ theme.settings.subheading_weight }} !default;

// Interface
$interface__background-color: $card__background-color !default;
$interface__background-color--active: $card__background-color--active !default;
$interface__border-color: transparent !default;
$interface__border-width: 1px !default;
$interface__border-style: solid !default;
$interface__border: $interface__border-width $interface__border-style $interface__border-color !default;

// Icon
$icon__font-family: 'FontAwesome' !default

// Navigation
$nav__background-color: {{ theme.settings.menu_background_color }} !default;
$nav__link-color: {{ theme.settings.menu_link_color }} !default;
$nav__background-color--active: $nav__background-color !default;
$nav__link-color--active: dynamic-contrast-color($nav__background-color) !default;
$nav__fixed-background-color: $nav__background-color !default;
$nav__fixed-link-color: $nav__link-color !default;
$nav__fixed-link-color--active: $nav__link-color--active !default;
$nav__floating-link-color: {{ theme.settings.menu_floating_link_color }} !default;
$nav__floating-link-color--active: dynamic-hover-color($nav__floating-link-color) !default;
$nav__mobile-background-color: $accent__color !default;
$nav__mobile-link-color: dynamic-contrast-color($nav__mobile-background-color) !default;
$nav__mobile-background-color--active: $accent__color !default;
$nav__mobile-link-color--active: dynamic-contrast-color($accent__color) !default;

// Mobile Menu (Icon)
$mobile-menu__width: 24px;
$mobile-menu__height: 24px;
$mobile-menu__thickness: 3px;
$mobile-menu__space: 4px;
$mobile-menu__transition: 250ms;

// Dropdown
$dropdown__background-color: $nav__background-color !default;
$dropdown__link-color: $nav__link-color !default;
$dropdown__link-background-color: $nav__background-color !default;
$dropdown__link-color--active: $nav__link-color--active !default;
$dropdown__link-background-color--active: $nav__background-color !default;

// Footer
$footer__background-color: $nav__background-color !default;
$footer__text-color: $nav__link-color !default;
$footer__link-color: $nav__link-color !default;
$footer__link-color--active: $nav__link-color--active !default;


// Decoration
// ======================================

$base__border-radius: 5px !default;
$base__border-color: transparent !default;
$base__border-width: 1px !default;
$base__border-style: solid !default;


// Forms & Inputs
// ======================================

$form__control-border-width: 1px !default;
$form__control-border-style: solid !default;
$form__control-border: $form__control-border-width $form__control-border-style $base__border-color !default;
$form__control-padding: 10px 15px !default;
$form__input-color: $body__text-color !default;
$form__input-background-color: $interface__background-color !default;
$form__input-color-placeholder: tint($form__input-color, 50%) !default;
$form__input-disabled: shade($interface__background-color, 3%) !default;
$form__input-height: calc($body__font-size * $body__line-height) + ($gutter-width) !default;


// Review Stars
// ======================================

$review-star__size: 0.75rem !default;
$review-star__icon: 'fa-star' !default;
$review-star__icon-empty: 'fa-star-o' !default;
$review-star__filled-color: $accent__color !default;
$review-star__empty-color: $accent__color !default;

// Progress Bar (Circle)
$progress__circle-size: 60px !default;
$progress__meter-size: 6px !default;
$progress__circle-background: $white !default;
$progress__circle-color: $accent__color !default;
$progress__inset-size: $progress__circle-size - $progress__meter-size !default;
$progress__inset-color: $white !default;
$progress__transition: transform 400ms ease !default;

// Section Padding

$section-height__small: $gutter-width !default;
$section-height__medium: $gutter-width * 2 !default;
$section-height__large: $gutter-width * 3.75 !default;
$section-height__xlarge: $gutter-width * 10 !default;

$section-height: (
  small: $section-height__small,
  medium: $section-height__medium,
  large: $section-height__large,
  xlarge: $section-height__xlarge
);

// Stack Order
// ======================================

$z-index__default: 0 !default;
$z-index__element--background: 101 !default;
$z-index__element--middleground: 102 !default;
$z-index__element--foreground: 103 !default;
$z-index__overlay: 200 !default;
$z-index__navigation--background: 301 !default;
$z-index__navigation--middleground: 302 !default;
$z-index__navigation--foreground: 303 !default;
$z-index__modal: 400 !default;
$z-index__saiyan: 9999 !default;
$z-index__yamcha: -9999 !default;

$z-index: (
  default: $z-index__default,
  element--background: $z-index__element--background,
  element--middleground: $z-index__element--middleground,
  element--foreground: $z-index__element--foreground,
  overlay: $z-index__overlay,
  navigation--background: $z-index__navigation--background,
  navigation--middleground: $z-index__navigation--middleground,
  navigation--foreground: $z-index__navigation--foreground,
  modal: $z-index__modal,
  page-foreground: $z-index__saiyan,
  page-background: $z-index__yamcha
);
