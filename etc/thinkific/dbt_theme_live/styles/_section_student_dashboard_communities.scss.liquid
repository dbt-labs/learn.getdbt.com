// Student Dashboard Communities

.student-dashboard {
  &__communities {
    padding-top: $gutter-width * 2;
  }

  &__communities-heading {
    @include page-heading;
    @include screen-md-min {
      margin-bottom: $gutter-width * 1.5;
    }
  }
}

.community-card {
  &__title {
    font-size: 1.125rem;
    font-weight: 400;
    line-height: 1.25;
    text-align: center;
  }

  &__img-container {
    position: relative;
    height: 200px;
  }

  &__img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  &__body {
    padding: $gutter-width $gutter-width / 1.5;
    text-align: center;
  }

  &__posts {
    margin: 0;
    color: $body__text-color;
    font-size: 0.875rem;
    font-weight: 400;
    line-height: 1;
  }
}
