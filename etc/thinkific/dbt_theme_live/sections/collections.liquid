<div class="bg-silver-light">
	<div class="mask mask-se text-white"></div>
	<div class="section">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 snug">
					<h1 class="h0">{{ 'liquid.views.collections_landing_page.header_courses' | translate }}</h1>
					<p>Level up your dbt skills on your own time with dbt Fundamentals.</p>
					{% include 'products_search' %}
				</div>
			</div>
			{% if page.has_products %}
			    {% paginate page.products by 100 %}
			    <div class="row">
					{% for product in paginate.collection %}
					    <div class="col-md-6 col-lg-4">
						{% if product.is_course %}
							{% assign item = product %}
							{% include 'course_card' with item %}
						{% else %}
							{% assign bundle = product.bundle %}
							{% include 'bundle_card' with bundle %}
						{% endif %}
						{% assign product_count = forloop.length %}
						</div>
					{% endfor %}
				</div>
				{% include 'pagination' with paginate %}
				{% endpaginate %}
            {% else %}
                <div class="row">
                    <div class="col-lg-12">
                        <p class="products__list-no-results">{{ 'liquid.views.collections_index.text_no_results' | translate }}</p>
                    </div>
                </div>
            {% endif %}
		</div>
	</div>
</div>







{% style %}

.collections__product-cards {
  {% include 'section_style_card_alignment' %}
}

{% endstyle %}

