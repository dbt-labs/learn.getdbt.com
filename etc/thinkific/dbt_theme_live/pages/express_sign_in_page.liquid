{% comment %} This is the express sign in page. {% endcomment %}

<div class="bg-silver-light">
  <div class="mask mask-ne text-white"></div>
  <div class="section">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <main class="express-sign-in" id="main-content" role="main">
            <div class="express-sign-in__container">
              <div class="express-sign-in__wrapper">
                <article class="express-sign-in__form">
                  <h2 class="page__heading margin-small">
                    {{
                    'liquid.views.express_sign_in_page.thinkific_express_signin'
                    | translate }}
                  </h2>
                  <p>
                    {{ 'liquid.views.express_sign_in_page.set_password' |
                    translate }}
                  </p>
                  {% form 'express_sign_in' %} {% if errors.size > 0 %} {%
                  include 'form_errors' %} {% endif %} {% assign field =
                  fields.email %}
                  <input
                    type="hidden"
                    name="{{ field.name }}"
                    value="{{ field.value }}"
                  />

                  <div class="form-grid form-grid-left">
                    <div class="form-row">
                      {% assign field = fields.password %}
                      <div class="form-label">
                        <label for="{{ field.name }}" class="form__label">
                          {{ field.label }}
                        </label>
                      </div>
                      <div class="form-response">
                        <input
                          type="password"
                          id="{{ field.name }}"
                          name="{{ field.name }}"
                          placeholder="{{ field.placeholder }}"
                          class="form__control form-control input-white input-shadow"
                          {%
                          if
                          field.required
                          %}required{%
                          endif
                          %}
                          autocapitalize="off"
                          autocomplete="off"
                          autocorrect="off"
                          spellcheck="false"
                          autofocus
                        />
                      </div>
                    </div>

                    <div class="form-row">
                      {% assign field = fields.password_confirmation %}
                      <div class="form-label">
                        <label
                          for="user_password_confirmation"
                          class="form__label"
                        >
                          {{ field.label }}
                        </label>
                      </div>
                      <div class="form-response">
                        <input
                          type="password"
                          name="{{ field.name }}"
                          placeholder="{{ field.placeholder }}"
                          id="user_password_confirmation"
                          class="form__control form-control input-white input-shadow"
                          {%
                          if
                          field.required
                          %}required{%
                          endif
                          %}
                          autocapitalize="off"
                          autocomplete="off"
                          autocorrect="off"
                          spellcheck="false"
                        />
                      </div>
                    </div>

                    <div class="form__button-group form-footer">
                      <input
                        type="submit"
                        name="commit"
                        value="{{ fields.submit.label }}"
                        class="button button-primary btn btn-info"
                        id="sign-in"
                      />
                    </div>
                  </div>
                  {% endform %}
                </article>
              </div>
            </div>
          </main>
        </div>
      </div>
    </div>
  </div>
</div>
