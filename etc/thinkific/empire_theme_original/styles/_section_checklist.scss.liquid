// Checklist
// ======================================

.checklist {

  &.section__column-layout__two-column {
    @include screen-lg-min {

      .checklist__list-item {
        padding-left: 0;
      }
    }
  }

  .section__subheading {
    font-size: modular-scale(0);
    line-height: 2;
  }
}

.checklist__container {
  @include make-container;
}

.checklist__wrapper {
  @include make-row(true);
}

.checklist__list {
  @include make-row(true);
}

.checklist__list-item {
  @include make-col(12);

  margin-bottom: $gutter-width;

  p {
    position: relative;
    margin: 0;
    padding-left: $gutter-width * 1.5;
  }

  .fa {
    @include transform(translatey(-50%));

    display: inline-block;
    position: absolute;
    top: 50%;
    left: 0;
    width: $gutter-width;
    height: $gutter-width;
    margin: 0 $gutter-width / 2 0 0;
    border-radius: 50%;
    color: $accent__color;
    font-size: $gutter-width;
    line-height: 32px;
    text-align: center;
  }
}
