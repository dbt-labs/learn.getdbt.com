// Frequently Asked Questions
// ======================================

.faq {

  .section__headings,
  .section__content {
    @include screen-md-min {
      @include make-col(8);
    }
    @include screen-lg-min {
      @include make-col(6);
    }
    @include make-col(12);
  }

  .section__headings {
    flex: 0 1 auto;
    margin: 0 0 $gutter-width * 2;
    padding: 0;
  }

  .section__heading,
  .section__subheading {
    color: $heading__color;
  }

  .section__content {
    flex: 0 1 auto;
    text-align: left;
  }
}

.faq__container {
  @include make-container;
}

.faq__wrapper {
  @include flex-direction(column);
  @include justify-content(center);
  @include align-items(center);
  @include make-row(false);
}

.faq__list {
  @include make-row;
}

.faq__list-item {
  display: block;
  position: relative;
  width: 100%;
  margin: 0 0 $gutter-width;

  &:nth-of-type(1) {
    @include animation-delay(0.5s);
  }

  &:nth-of-type(2) {
    @include animation-delay(0.75s);
  }

  &:nth-of-type(3) {
    @include animation-delay(1s);
  }

  &:last-of-type {
    margin-bottom: 0;
  }

  [type="checkbox"] {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
    opacity: 0;
    z-index: z-index(element--background);

    &:focus {
      ~ strong {
        outline: $accent__color auto 1px;
      }
    }

    &:checked {
      & ~ p {
        @include transition(max-height 200ms ease, padding 200ms ease, opacity 200ms ease);

        max-height: 0;
        padding: 0;
        opacity: 0;
      }

      & ~ strong i {
        &:before {
          @include transform(translate(2px, 2px) rotate(-140deg));
        }

        &:after {
          @include transform(translate(2px, -3px) rotate(140deg));
        }
      }
    }
  }

  strong {
    @include user-select(none);

    display: block;
    position: relative;
    width: 100%;
    margin: 0;
    padding-left: $gutter-width;
    font-size: modular-scale(0);
    font-weight: 600;
    line-height: 1.5;

    i {
      @include transform(translate(-6px, 0));

      display: inline-block;
      position: absolute;
      top: 6px;
      left: $gutter-width / 2;
      height: 1rem;

      &:before,
      &:after {
        @include transition(all 0.25s ease);

        position: absolute;
        width: 3px;
        height: 9px;
        background-color: $accent__color;
        content: "";
      }

      &:before {
        @include transform(translate(2px, 0) rotate(45deg));
      }

      &:after {
        @include transform(translate(-2px, 0) rotate(-45deg));
      }
    }
  }

  p {
    @include transition(max-height 200ms ease, padding 200ms ease, opacity 200ms ease);

    position: relative;
    max-height: 1000px;
    margin: 0;
    padding: 1rem 0;
    padding-left: $gutter-width;
    opacity: 1;
    overflow: hidden;
    z-index: z-index(element--middleground);
  }

  .icon {
    position: absolute;
    top: 0;
    left: 0;
    max-width: 24px;
  }
}
