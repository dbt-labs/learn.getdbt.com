// Forms
// ======================================

form,
input,
textarea,
label,
fieldset,
legend,
select,
optgroup,
option,
datalist,
keygen,
output {
  color: $form__input-color;

  &:focus {
    outline: $form__control-border-width $form__control-border-style $accent__color;
    outline-offset: $form__control-border-width * -1;
    outline-style: solid;
  }
}

fieldset {
  padding: 0;
  border: 0;
}

input {
  &[type="text"],
  &[type="email"],
  &[type="password"],
  &[type="search"] {
    @include appearance(none);

    &,
    &:active,
    &:hover {
      border-radius: 0;
      -webkit-border-radius: 0;
    }

    &:active,
    &:hover {
      border-color: $accent__color;
    }
  }

  &[type="checkbox"] {
    display: inline-block;
    width: auto;
    margin-right: $gutter-width / 4;
  }
}

select {

  &:active,
  &:hover {
    border-color: $accent__color;
  }

  &.form__control {
    @include appearance(none);

    padding-right: 32px;
  }
}

.form__group {
  @include form-group;
}

.form__error-msg {
  display: inline-block;
  margin: 0;
  color: $alert--error;
  font-size: 0.875rem;
  font-weight: 400;
}

.form__button-group {
  .form__label + & {
    @include screen-sm-min {
      width: 25%;
      margin-left: 1rem;
      padding-top: 0;
    }
    @include align-self(flex-end);

    width: 100%;
    padding-top: $gutter-width / 2;
  }

  .button {
    @include screen-xs-max {
      width: 100%;
    }
  }
}

.form__label {
  @include form-label;
}

.form__label-checkbox {
  font-size: 1rem;
}

.form__remember-me,
.form__forgot-password {
  & {
    font-size: 0.75rem;
    line-height: 2;
  }
}

.form__forgot-password {
  margin-right: 0;
  margin-left: auto;
  text-align: right;
}

.form__select-label {
  @include form-select-label;
}

.form__select-no-label {
  @include form-select-no-label;
}

.form__search {
  display: block;
  position: relative;

  &:after {
    @include transform(translatey(-50%));

    display: inline-block;
    position: absolute;
    top: 50%;
    right: 1rem;
    width: 1rem;
    height: 1rem;
    color: $body__text-color;
    font-family: $icon__font-family;
    font-size: 1rem;
    line-height: 1;
    text-align: center;
    content: "\f002";
    pointer-events: none;
  }
}

.form__control {
  @include form-control;

  &.form__control-search {
    padding-right: 32px;
  }

  &.input--error {
    border: 1px solid $alert--error;

    &:hover,
    &:focus,
    &:active {
      border-color: $alert--error;
      outline-color: $alert--error;
    }
  }

  &.input--success {
    border: 1px solid $alert--success;

    &:hover,
    &:focus,
    &:active {
      border-color: $alert--success;
      outline-color: $alert--success;
    }
  }
}

.form__notice,
.form-error__list {
  width: 100%;
  font-size: 0.875rem;
}

.form__notice {
  font-style: italic;
}

.form-error__list {
  color: $alert--error;
}

::-webkit-input-placeholder {
  color: $form__input-color-placeholder;
}

::-moz-placeholder {
  color: $form__input-color-placeholder;
}

:-ms-input-placeholder {
  color: $form__input-color-placeholder;
}

:-moz-placeholder {
  color: $form__input-color-placeholder;
}

::placeholder {
  color: $form__input-color-placeholder;
}
