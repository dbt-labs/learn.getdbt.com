<section class=
  "
    rich-text section-height__medium
    {% include 'section_utility_heading_alignment' %}
  "
  data-preview-item="rich_text"
>
  <div class="rich-text__container">
    <div class="rich-text__wrapper">
      {% include 'section_headings' %}
      <div class="section__content">
        <div class="section__body">
          {{ section.settings.body }}
        </div>
      </div>
    </div>
  </div>
</section>

{% style %}

.rich-text {
  {% include 'section_style_heading_alignment' %}

  {% if section.settings.section_padding_top %}
    .rich-text__container {
      padding-top: 0;
    }
  {% endif %}

  {% if section.settings.section_padding_bottom %}
    .rich-text__container {
      padding-bottom: 0;
    }
  {% endif %}
}

{% endstyle %}

{% schema %}
{
  "label":"Text & media",
  "settings":[
    {
      "label":"Headings",
      "settings":[
        {
          "type":"text",
          "id":"heading",
          "label":"Heading",
          "default":"Text & media"
        },
        {
          "type":"text",
          "id":"subheading",
          "label":"Subheading",
          "default":""
        },
        {
          "type":"radio",
          "id":"heading_alignment",
          "label":"Alignment",
          "description":"",
          "default":"left",
          "options":[
            {
              "value":"left",
              "label":"Left"
            },
            {
              "value":"center",
              "label":"Center"
            },
            {
              "value":"right",
              "label":"Right"
            }
          ]
        }
      ]
    },
    {
      "label":"Layout",
      "settings":[
        {
          "type":"checkbox",
          "id":"section_padding_top",
          "label":"Remove top section padding",
          "default":false
        },
        {
          "type":"checkbox",
          "id":"section_padding_bottom",
          "label":"Remove bottom section padding",
          "default":false
        }
      ]
    },
    {
      "type":"richtext",
      "id":"body",
      "label":"Content",
      "default":"The other sections are styled to help you create beautiful, high-converting pages. If you already know exactly what you want, use this section to add text, images, video, audio, etc. and build something completely custom. This is your sandbox â€” create what you want!"
    }
  ]
}
{% endschema %}
